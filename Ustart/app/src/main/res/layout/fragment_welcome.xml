<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".views.WelcomeFragment">

    <ImageView
        android:id="@+id/shoppingIV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shopping_bag" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:text="The store of your dreams. Everything you need is here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/shopBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerTV"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="20dp"
        android:minHeight="65dp"
        android:text="Start Shopping"
        android:textColor="@color/purple"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/registerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/singInTV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Already have an account?"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/singInTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="50dp"
        android:text="Sign In"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold" />

</RelativeLayout>